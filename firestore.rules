rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Helper function to check if the user is authenticated and is the owner of the document
    function isOwner(userId) {
      return request.auth != null && request.auth.uid == userId;
    }

    // Match the user document
    match /users/{userId} {
      // Allow create/read if owner
      allow create, read: if isOwner(userId);
      
      // Allow update if owner AND credits are not increased (prevents client-side hacking)
      // Webhook/Backend uses Admin SDK which bypasses these rules
      allow update: if isOwner(userId) && 
        request.resource.data.usage.weatherCredits <= resource.data.usage.weatherCredits &&
        request.resource.data.usage.baroCredits <= resource.data.usage.baroCredits;
      
      // Match the subcollection audit_logs
      // Only allow creation (append-only) and reading. No updates or deletes to logs.
      match /audit_logs/{logId} {
        allow read, create: if isOwner(userId);
        allow update, delete: if false;
      }
    }

    // System configuration (Publicly readable)
    match /system/config {
      allow read: if true;
      allow write: if false; // Only Admin SDK can write
    }
    
    // Purchases collection (Transaction Log)
    match /purchases/{purchaseId} {
      allow read: if request.auth != null && resource.data.userId == request.auth.uid;
      allow write: if false; // Only Admin SDK (webhook) can write
    }
    
    // Deny access to everything else by default
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
