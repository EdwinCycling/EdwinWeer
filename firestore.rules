rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Helper function to check if the user is authenticated and is the owner of the document
    function isOwner(userId) {
      return request.auth != null && request.auth.uid == userId;
    }

    // Match the user document
    match /users/{userId} {
      // Allow read/write only if the user is the owner
      allow read, write: if isOwner(userId);
      
      // Match the subcollection audit_logs
      match /audit_logs/{logId} {
        // Allow read/write only if the user is the owner
        // Typically logs are write-only or read-only for the user, but for now we allow both
        allow read, write: if isOwner(userId);
      }
    }
    
    // Deny access to everything else by default
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
